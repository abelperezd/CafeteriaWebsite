@model UpdateCategoryDto

@{
	ViewData["Title"] = "Edit";
}

<h1>Edit note: @Model.Name</h1>
<hr />

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="Category" asp-action="Update">
	<input type="hidden" asp-for="Id"/>

	<div class="mb-3">
		<label asp-for="Name" class="form-label"></label>
		<input type="text" asp-for="Name" name="Name" class="form-control" />
		<span asp-validation-for="Name" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label asp-for="Description" class="form-label"></label>
		<input type="text" asp-for="Description" name="Description" class="form-control" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Save</button>

	<a class="btn btn-secondary" asp-action="Home" asp-controller="Home">Cancel</a>
</form>



@* Not needed for now, but we would if other type of validations were needed, such as credit cards*@
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

