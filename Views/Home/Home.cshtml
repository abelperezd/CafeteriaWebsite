@model List<CategoryModel>

@{
	ViewData["Title"] = "Home Page";
}


<div class="text-center ">

	<img id="homePhoto" src="~/img/big_green_logo.png" alt="logo" />

	<div class="text-center d-flex justify-content-center align-items-center">
		@await Html.PartialAsync("_CategoryList", Model)
	</div>

	<div class="mt-3">
		@if (User.Identity.IsAuthenticated)
		{
			<a class="linkIcon" style="font-size: 1.5rem;"
			   asp-controller="Category"
			   asp-action="AddNew">
				<i class="main-color bi bi-plus-square"></i>
			</a>
		}
	</div>
</div>

@await Html.PartialAsync("_DeleteCategoryModal")

@section Scripts {
	<script>
		var deleteCategoryUrl = '@Url.Action("DeleteFromToast", "Category")';
	</script>

	<script type="text/javascript" src="~/js/deleteCategory.js"></script>
}

