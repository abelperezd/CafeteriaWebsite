@using CafeteriaWebsite.Enums
@model CreateFoodDto

@{
	ViewData["Title"] = "Add New";
}

<div class="text-center">

	<h1>Create new note</h1>
	<hr />

	<div asp-validation-summary="ModelOnly" class="text-danger"></div>

	<form asp-controller="Food" asp-action="AddNew" enctype="multipart/form-data">
x
		<input type="hidden" asp-for="CategoryId" />

		<div class="mb-3">
			<label asp-for="Name" class="form-label"></label>
			<input type="text" asp-for="Name" name="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>

		<div class="mb-3">
			<label asp-for="Description" class="form-label"></label>
			<input type="text" asp-for="Description" name="Description" class="form-control" />
			<span asp-validation-for="Description" class="text-danger"></span>
		</div>

		<div class="form-group">
			<label asp-for="Image" class="control-label col-md-2"></label>
			<div class="col-md-10">
				<input type="file" name="Image" id="Image" onchange="fileCheck(this);" />
			<span asp-validation-for="Image" class="text-danger"></span>
			</div>
		</div>

		@{
			/*
		<div>
		<label asp-for="Tag" class="form-label"></label>
		<select asp-for="Tag" asp-items="Html.GetEnumSelectList<FoodTag>()" class="form-select"></select>
		<span asp-validation-for="Tag" class="text-danger"></span>
		</div>
			*/
		}

		<div>
			@for (int i = 0; i < Model.TagOptions.Count; i++)
			{
				var tag = Model.TagOptions[i];
				<div class="form-check form-switch">
					<input class="form-check-input" type="checkbox" asp-for="Tags[i]" id="tagSwitch_@i">
					<label class="form-check-label" for="tagSwitch_@i">@tag.ToString()</label>
				</div>
			}
		</div>

		<button type="submit" class="btn btn-primary">Add</button>
		<a class="btn btn-secondary" asp-action="Menu" asp-route-categoryId=@Model.CategoryId>>Cancel</a>

	</form>



	@* Not needed for now, but we would if other type of validations were needed, such as credit cards*@
	@section Scripts {
		<partial name="_ValidationScriptsPartial" />
	}

	<script type="text/javascript">
		function fileCheck(obj) {
			var fileExtension = ['jpeg', 'jpg', 'png', 'gif', 'bmp'];
			if ($.inArray($(obj).val().split('.').pop().toLowerCase(), fileExtension) == -1) {
				alert("Only '.jpeg','.jpg', '.png', '.gif', '.bmp' formats are allowed.");
			}
		}
	</script>

</div>